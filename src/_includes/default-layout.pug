t:
    ru:
        title: Фонд социального развития "Құмай"
        doSearch: Поиск
        pages:
          - link: "/ru/"
            title: Главная

          - link: "/ru/news/"
            title: Новости

          - link: "/ru/about/"
            title: О фонде
            
          - link: "/ru/projects/"
            title: Наши проекты

    kz:
        title: Фонд социального развития "Құмай"
        doSearch: Іздеу
        pages:
          - link: "/kz/"
            title: "Басты"

          - link: "/kz/news/"
            title: "Жаңалықтар"

          - link: "/kz/about/"
            title: "Қор туралы"

          - link: "/kz/projects/"
            title: "Біздің жобалар"
---

doctype html
html 
    head 
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title= t[lang].title
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css")
        link(rel="stylesheet" href="/assets/css/style.css")

    body.flex.flex-col.min-h-screen.font-rubik
        header(class="sm:sticky sm:top-0").border-b.bg-white
            .max-w-screen-xl.w-full.mx-auto.p-4.flex.items-center.justify-between.gap-4
                a(href=`/${lang}` class="sm:w-36").flex.items-center.gap-2
                    div(class="w-[32px]")
                        img(src="/assets/img/logo-blue.png").w-full
                    span.font-bold.text-primary-blue Фонд социального<br> развития "Құмай"
                        
                div(class="sm:flex lg:gap-16").hidden.gap-6
                    each page in t[lang].pages
                        if page.link === url
                            a(href=page.link class="text-primary-blue")= page.title
                        else
                            a(href=page.link class="hover:text-primary-blue")= page.title

                div(class="sm:w-36").flex.gap-4
                    a(href="#search").text-gray-500.flex.items-center.gap-2.bg-gray-100.rounded-xl.px-4.py-2.border
                        i.fa-solid.fa-search

                    div(tabindex=0 class="sm:block").px-4.py-2.rounded-xl.bg-gray-100.text-gray-500.relative.group.hidden.border
                        .flex.gap-2.items-center
                            span.uppercase= lang
                            i.fa-solid.fa-chevron-down.text-xs

                        div(class="group-focus-within:visible").invisible.absolute.top-full.bg-gray-100.left-0.right-0.px-4.py-2.rounded-xl.shadow-xl.border.z-10
                            each alternate in alternates
                                if alternate.data.lang !== lang
                                    a(href= value=alternate.data.url).uppercase.block= alternate.data.lang

        nav(class="sm:hidden").sticky.top-0.bg-white.border-b
            div(class="sm:p-0").max-w-screen-xl.w-full.mx-auto.px-4.py-2.flex.justify-between.items-center
                a(href="#menu").text-gray-500.flex.items-center.gap-2.bg-gray-100.rounded-xl.px-4.py-2.border
                    i.fa-solid.fa-bars
                    span Меню

                div(tabindex=0).px-4.py-2.rounded-xl.bg-gray-100.text-gray-500.relative.group.border
                    .flex.gap-2.items-center
                        span.uppercase= lang
                        i.fa-solid.fa-chevron-down.text-xs

                    div(class="group-focus-within:visible").invisible.absolute.top-full.bg-gray-100.left-0.right-0.px-4.py-2.rounded-xl.shadow-xl.border.z-10
                        each alternate in alternates
                            if alternate.data.lang !== lang
                                a(href= value=alternate.data.url).uppercase.block= alternate.data.lang

        main.flex-grow!=content

        footer.py-4.bg-gray-400
            .max-w-screen-xl.w-full.mx-auto.px-4.py-2.flex.flex-col.gap-4
                a(href="/#{lang}").flex.items-center.gap-2
                    img(src="/assets/img/logo-white.png" width=32)
                    span.font-bold.text-white Fondqumai.kz

                div
                    p.text-white.font-bold.mb-2 Павлодар
                    p.text-gray-200.text-sm 050040, пр. Аль-Фараби, 77/7
                    p.text-gray-200.text-sm Тел. +7 (727) 356 17 38

        //- Modals

        div(id="menu" class="invisible target:visible fixed top-0 left-0 right-0 bottom-0 sm:hidden")
            div(class="w-72 h-full bg-white shadow-xl relative")
                .space-y-4.py-4.flex.flex-col.h-full.justify-between
                    .text-gray-700
                        each page in t[lang].pages
                            a(href=page.link).px-4.py-2.w-full.block= page.title

                    .flex.items-center.gap-4.px-4.text-primary-blue
                        a(href="/" target="_blank" class="border rounded-xl p-2 hover:bg-gray-200 w-10 h-10 flex items-center justify-center")
                            i.fa-brands.fa-instagram.text-xl

                        a(href="/" target="_blank" class="border rounded-xl p-2 hover:bg-gray-200 w-10 h-10 flex items-center justify-center")
                            i.fa-brands.fa-youtube.text-xl

                        a(href="/" target="_blank" class="border rounded-xl p-2 hover:bg-gray-200 w-10 h-10 flex items-center justify-center")
                            i.fa-brands.fa-facebook.text-xl

            a(href="#" class="absolute top-0 left-0 right-0 bottom-0 bg-black/75 -z-10")

        div(id="search" class="invisible target:visible fixed top-0 left-0 right-0 bottom-0 sm:hidden")
            form(action="search")
                input(name="q" placeholder="Поиск").bg-white.w-full.p-4

            a(href="#" class="absolute top-0 left-0 right-0 bottom-0 bg-black/75 -z-10")