doctype html
html 
    head 
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title= t[lang].title
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css")
        link(rel="stylesheet" href="/assets/css/style.css")

    body.flex.flex-col.min-h-screen.font-rubik
        header.border-b
            .max-w-screen-xl.w-full.mx-auto.p-4.flex.items-center.justify-between.gap-4
                a(href=`/${lang}`).flex.items-center.gap-2
                    img(src="/assets/img/logo-blue.png" width=32)
                    span.font-bold.text-primary-blue Fondqumai.kz

                .flex.gap-4
                    a(href="#search" class="sm:hidden").text-gray-500.flex.items-center.gap-2.bg-gray-100.rounded-xl.px-4.py-2
                        i.fa-solid.fa-search

                    form(action="/search" class="sm:flex").hidden
                        input(name="q" placeholder= t[lang].doSearch).border.rounded-tl-xl.rounded-bl-xl.border-r-0.px-4
                        button.text-gray-500.flex.items-center.gap-2.bg-gray-100.rounded-tr-xl.rounded-br-xl.px-4.py-2
                            i.fa-solid.fa-search

                    div(tabindex=0 class="sm:block").px-4.py-2.rounded-xl.bg-gray-100.text-gray-500.relative.group.hidden
                        .flex.gap-2.items-center
                            span.uppercase= lang
                            i.fa-solid.fa-chevron-down.text-xs

                        div(class="group-focus-within:visible").invisible.absolute.top-full.bg-gray-100.left-0.right-0.px-4.py-2.rounded-xl.shadow-xl.border.z-10
                            each alternate in alternates
                                if alternate.data.lang !== lang
                                    a(href= value=alternate.data.url).uppercase.block= alternate.data.lang

        nav.border-b.sticky.top-0.bg-white
            .max-w-screen-xl.w-full.mx-auto.px-4.py-2.flex.justify-between.items-center
                a(href="#menu" class="sm:hidden").text-gray-500.flex.items-center.gap-2.bg-gray-100.rounded-xl.px-4.py-2
                    i.fa-solid.fa-bars
                    span Меню

                div(tabindex=0 class="sm:hidden").px-4.py-2.rounded-xl.bg-gray-100.text-gray-500.relative.group
                    .flex.gap-2.items-center
                        span.uppercase= lang
                        i.fa-solid.fa-chevron-down.text-xs

                    div(class="group-focus-within:visible").invisible.absolute.top-full.bg-gray-100.left-0.right-0.px-4.py-2.rounded-xl.shadow-xl.border.z-10
                        each alternate in alternates
                            if alternate.data.lang !== lang
                                a(href= value=alternate.data.url).uppercase.block= alternate.data.lang

        main.flex-grow!=content

        footer.py-4.bg-gray-400
            .max-w-screen-xl.w-full.mx-auto.px-4.py-2.flex.flex-col.gap-4
                a(href="/#{lang}").flex.items-center.gap-2
                    img(src="/assets/img/logo-white.png" width=32)
                    span.font-bold.text-white Fondqumai.kz

                div
                    p.text-white.font-bold.mb-2 Павлодар
                    p.text-gray-200.text-sm 050040, пр. Аль-Фараби, 77/7
                    p.text-gray-200.text-sm Тел. +7 (727) 356 17 38

        //- Modals

        div(id="menu" class="invisible target:visible fixed top-0 left-0 right-0 bottom-0 sm:hidden")
            div(class="w-72 h-full bg-white shadow-xl relative")
                .space-y-4.py-4
                    .text-gray-700
                        each page in t[lang].pages
                            a(href=page.link).px-4.py-2.w-full.block= page.title

                    .flex.items-center.gap-4.px-4.text-primary-blue
                        a(href="/" target="_blank" class="border rounded-xl p-2 hover:bg-gray-200 w-10 h-10 flex items-center justify-center")
                            i.fa-brands.fa-instagram

                        a(href="/" target="_blank" class="border rounded-xl p-2 hover:bg-gray-200 w-10 h-10 flex items-center justify-center")
                            i.fa-brands.fa-youtube

                        a(href="/" target="_blank" class="border rounded-xl p-2 hover:bg-gray-200 w-10 h-10 flex items-center justify-center")
                            i.fa-brands.fa-facebook

            a(href="#" class="absolute top-0 left-0 right-0 bottom-0 bg-black/75 -z-10")

        div(id="search" class="invisible target:visible fixed top-0 left-0 right-0 bottom-0 sm:hidden")
            form(action="search")
                input(name="q" placeholder="Поиск").bg-white.w-full.p-4

            a(href="#" class="absolute top-0 left-0 right-0 bottom-0 bg-black/75 -z-10")