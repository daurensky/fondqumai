doctype html
html 
    head 
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title= t[lang].title
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto&family=Rubik:wght@400;500;700&display=swap")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css")
        link(rel="stylesheet" href="/assets/css/style.css")

    body.flex.flex-col.min-h-screen.font-roboto
        header.bg-white
            .max-w-screen-xl.w-full.mx-auto.p-4.flex.items-center.justify-between.gap-4
                a(href=`/${lang}` class="sm:w-36").flex.items-center.gap-2
                    img(src="/assets/img/logo.svg" width=150)

                .flex.gap-4
                    a(href="#search").flex.items-center.gap-2.bg-primary-white.rounded-xl.px-4.py-3
                        i.fa-solid.fa-search.text-primary-gray

                    //- Desktop
                    button(class="focus-within:text-primary-tiffany sm:block").hidden.px-4.py-2.rounded-xl.bg-primary-white.relative.group.text-primary-gray
                        .flex.gap-2.items-center
                            span.uppercase.font-rubik.font-medium= lang
                            i.fa-solid.fa-chevron-down.text-xs

                        div(class="group-focus-within:visible").invisible.absolute.top-full.bg-primary-white.left-0.right-0.px-4.py-2.rounded-xl.shadow.z-10
                            each alternate in alternates
                                if alternate.data.lang !== lang
                                    a(href= value=alternate.data.url).uppercase.block.text-primary-gray.text-left.font-medium.font-rubik= alternate.data.lang
                    
                    //- Desktop
                    div(class="sm:flex").hidden.gap-2.w-full.justify-center
                        a(href="https://www.instagram.com/qumai_fond/" target="_blank").flex.items-center.justify-center.w-12.h-12.rounded-full.bg-primary-white
                            i.fa-brands.fa-instagram.text-2xl.text-primary-gray
                            
                        a(href="https://www.facebook.com/groups/qumaifond/" target="_blank").flex.items-center.justify-center.w-12.h-12.rounded-full.bg-primary-white
                            i.fa-brands.fa-facebook.text-2xl.text-primary-gray

        nav.sticky.top-0.bg-primary-white
            .max-w-screen-xl.w-full.mx-auto.px-4.py-2.flex.justify-between.items-center
                //- Mobile
                button(class="sm:hidden" data-focusable).flex.items-center.gap-2.bg-white.rounded-xl.px-4.py-2.group.text-primary-gray
                    i.fa-solid.fa-bars
                    span.font-rubik.font-medium Меню
                        
                    div(data-focusable-item).invisible.absolute.top-full.left-0.right-0
                        .bg-white.shadow.py-2
                            each page in t[lang].pages
                                a(href=page.link class=`${page.link === url ? 'text-primary-tiffany' : 'text-primary-gray'}`).px-6.py-2.w-full.block.text-left.font-medium.font-rubik= page.title

                button(class="sm:hidden" data-focusable).px-4.py-2.rounded-xl.bg-white.relative.group.text-primary-gray
                    .flex.gap-2.items-center
                        span.uppercase.font-rubik.font-medium= lang
                        i.fa-solid.fa-chevron-down.text-xs

                    div(data-focusable-item).invisible.absolute.top-full.bg-white.left-0.right-0.px-4.py-2.rounded-xl.shadow.z-10
                        each alternate in alternates
                            if alternate.data.lang !== lang
                                a(href= value=alternate.data.url).uppercase.block.text-primary-gray.text-left.font-medium.font-rubik= alternate.data.lang
                                
                //- Desktop
                div(class="sm:flex").hidden.py-2.w-full
                    each page in t[lang].pages
                        a(href=page.link class=`${page.link === url ? 'text-primary-tiffany' : 'text-primary-gray'}`).w-full.block.text-center.font-medium.font-rubik= page.title

        main.flex-grow!=content

        footer.py-8.bg-primary-gray
            .max-w-screen-xl.w-full.mx-auto.px-4.py-2.flex.flex-col.gap-8
                .space-y-4
                    a(href="/#{lang}").flex.items-center.gap-2
                        img(src="/assets/img/logo-white.png" width=150)

                    p.text-primary-white= t[lang].withLove

                .space-y-2
                    p.text-primary-white.text-sm
                        span Тел: 
                        a(href="tel:+7 (701) 100 06 76").underline +7 (701) 100 06 76

                    p.text-primary-white.text-sm 
                        span Email: 
                        a(href="mailto:info@qumaifond.kz").underline info@qumaifond.kz

                .flex.gap-4.w-full.justify-center
                    a(href="https://www.instagram.com/qumai_fond/" target="_blank").flex.items-center.justify-center.w-12.h-12.border-2.border-primary-white.rounded-full
                        i.fa-brands.fa-instagram.text-2xl.text-primary-white
                        
                    a(href="https://www.facebook.com/groups/qumaifond/" target="_blank").flex.items-center.justify-center.w-12.h-12.border-2.border-primary-white.rounded-full
                        i.fa-brands.fa-facebook.text-2xl.text-primary-white

        //- Modals

        div(id="search" class="invisible target:visible fixed top-0 left-0 right-0 bottom-0 sm:hidden")
            form(action="search")
                input(name="q" placeholder="Поиск").bg-white.w-full.p-4

            a(href="#" class="absolute top-0 left-0 right-0 bottom-0 bg-black/75 -z-10")

        script(src="/assets/js/focusable.js")