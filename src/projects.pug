section(class="sm:py-16").py-8
    .max-w-screen-xl.w-full.mx-auto.px-4
        h2.text-2xl.font-bold.mb-8.text-center.text-primary-tiffany.font-rubik= ourProjects

        div(class="sm:grid-cols-3").grid.gap-8
            each project in projects
                .flex.flex-col.gap-4.justify-between
                    a(href=project.url).h-72.w-full
                        img(src=project.image).rounded-bl-3xl.rounded-tr-3xl.w-full.h-full.object-cover

                    a(href=project.url).space-y-2.h-full
                        p.font-rubik.font-medium.text-xl.text-primary-tiffany.w-full.text-center= project.title
                        p.text-gray-500.w-full.text-center= project.subText

                    a(href=project.url).bg-primary-white.text-primary-gray.p-4.rounded-xl.block.text-center.font-rubik.font-medium= more